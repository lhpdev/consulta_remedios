<h2 class="text-left"> Cart Items </h2>
<% if @cart_items.any? %>
  <div class="row">
    <div class="col-md-6">
      <ul class="list-group list-group-flush">
        <%= render partial: 'cart_item', collection: @cart_items %>
      </ul>
    </div>
    <% if @cart_items.any? %>
      <div class="col-md-6">
        <div class="p-3">
          <h4 class="text-left"><strong>Total</strong>: $<%= @total %></h4>
          <div class="row">
            <div class="col-md-2">
              <%= form_with url: "/carts/complete", local: false  do |f| %>
                <div class="form-group text-left">
                  <%= f.hidden_field :customer_id, value: @customer.id %>
                  <%= f.submit 'Purchase', :class => "btn btn-success" %>
                </div>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= form_with url: "/carts/cancel", local: false  do |f| %>
                <div class="form-group text-left">
                  <%= f.hidden_field :customer_id, value: @customer.id %>
                  <%= f.submit 'Cancel Cart', :class => "btn btn-danger"%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-left"> Your Cart is empty </p>
<% end %>